  <script>
    function copyAndOpen(text) {
      navigator.clipboard.writeText(text).then(() => {
        window.open('https://chat.openai.com/', '_blank');
      }).catch(err => {
        alert('Failed to copy prompt: ' + err);
      });
    }

    function filterLinks() {
      var input = document.getElementById("searchInput");
      var filter = input.value.toLowerCase();
      var links = document.getElementById("linksContainer").getElementsByClassName("quick-link");
      for (var i = 0; i < links.length; i++) {
        var txtValue = links[i].textContent || links[i].innerText;
        links[i].style.display = txtValue.toLowerCase().indexOf(filter) > -1 ? "" : "none";
      }
    }

    const sticky = document.getElementById("stickyContent");
    sticky.value = localStorage.getItem("stickyNote") || "";
    sticky.addEventListener("input", () => {
      localStorage.setItem("stickyNote", sticky.value);
    });
    function clearSticky() {
      sticky.value = "";
      localStorage.removeItem("stickyNote");
    }
    function toggleSticky() {
      var box = document.getElementById("stickyContentBox");
      box.style.display = box.style.display === "none" ? "block" : "none";
    }
  </script>

